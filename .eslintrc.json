{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["react"],
    "rules": {
        "semi": 0,
        "indent": 4
    }
}
